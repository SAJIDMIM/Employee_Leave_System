cat > .env << 'EOF'
# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_TIMEOUT=10000

# Application Configuration
REACT_APP_APP_NAME=Leave Management System
REACT_APP_VERSION=1.0.0

# JWT Configuration (for storing token in localStorage)
REACT_APP_TOKEN_KEY=leave_management_token
REACT_APP_USER_DATA_KEY=leave_management_user

# Feature Flags (optional)
REACT_APP_ENABLE_DEBUG_LOGS=true
REACT_APP_SHOW_CONSOLE_LOGS=true
EOF